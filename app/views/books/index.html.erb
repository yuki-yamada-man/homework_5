<div class="container">
  <div class="row">
    <div class="col">
      <h2>Index Book</h2>
      <table>
        <thead>
          <tr>
            <th>title</th>
            <th>body</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show",book_path(book.id), class:"btn btn-success" %></td>
            <td><%= link_to "Edit",edit_book_path(book_path), class:"btn btn-primary" %></td>
            <td><%= link_to "Destroy", book_path(book_path), method: :delete, class:"btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>

      <div class:"create">
        <h2>Create Book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <h3>title</h3>
        <%= f.text_field:title %>
        <h3>body</h3>
        <%= f.text_area:body %>
        <%= f.submit"Create Book", class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>